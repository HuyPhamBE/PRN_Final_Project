@page
@model PRN_Final_Project.Pages.TherapistPage.EditModel

@{
    ViewData["Title"] = "Edit Therapist";
}

<h1>Edit Therapist</h1>

<hr />

<!-- Bootstrap Modal for Success or Failure Message -->
<div class="modal fade" id="messageModal" tabindex="-1" role="dialog" aria-labelledby="messageModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="messageModalLabel">Notification</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @if (!string.IsNullOrEmpty(ViewData["Message"] as string))
                {
                    <p>@ViewData["Message"]</p>
                }
                else if (!string.IsNullOrEmpty(TempData["Message"] as string))
                {
                    <p>@Html.Raw(TempData["Message"])</p>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary close-modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Therapist.theraID" />
            <input type="hidden" asp-for="Therapist.accountID" />
            <input type="hidden" asp-for="Therapist.createdAt" />
            <input type="hidden" asp-for="Therapist.updatedAt" />

            <div class="form-group">
                <label asp-for="Therapist.fullName" class="control-label"></label>
                <input asp-for="Therapist.fullName" class="form-control" />
                <span asp-validation-for="Therapist.fullName" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Therapist.gender" />
                    @Html.DisplayNameFor(model => model.Therapist.gender)
                </label>
            </div>

            <div class="form-group">
                <label asp-for="Therapist.major" class="control-label"></label>
                <input asp-for="Therapist.major" class="form-control" />
                <span asp-validation-for="Therapist.major" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Therapist.imageUrl" class="control-label"></label>
                <input asp-for="Therapist.imageUrl" class="form-control" />
                <span asp-validation-for="Therapist.imageUrl" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Therapist.exp" class="control-label"></label>
                <input asp-for="Therapist.exp" class="form-control" />
                <span asp-validation-for="Therapist.exp" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Therapist.status" class="control-label"></label>
                <input asp-for="Therapist.status" class="form-control" />
                <span asp-validation-for="Therapist.status" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        $(document).ready(function () {
            var message = "@ViewData["Message"]" || "@TempData["Message"]";
            message = message.trim();

            if (message !== "" && message !== "undefined") {
                $('#messageModal').modal('show');
            }

            $('.close-modal').click(function () {
                $('#messageModal').modal('hide');
            });

            $('.close').click(function () {
                $('#messageModal').modal('hide');
            });
        });
    </script>
}
