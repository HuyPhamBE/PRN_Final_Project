@page
@model PRN_Final_Project.Pages.ManageFeedbackManager.ManageFeedbackManagerModel
@{
    ViewData["Title"] = "Manage Feedback";
}

<style>
    /* General Styles */
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 1200px;
        margin: 20px auto;
        padding: 20px;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
    }

    h2, h3 {
        color: #333;
    }

    h2 {
        margin-bottom: 20px;
        font-size: 24px;
    }

    h3 {
        margin-top: 20px;
        font-size: 20px;
    }

    /* Table Styles */
    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

    table th, table td {
        padding: 12px;
        text-align: left;
        border: 1px solid #ddd;
    }

    table th {
        background-color: #007bff;
        color: white;
        font-weight: bold;
    }

    table tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    table tr:hover {
        background-color: #f1f1f1;
    }

    /* Button Styles */
    a {
        text-decoration: none;
        color: #007bff;
        font-weight: bold;
    }

    a:hover {
        text-decoration: underline;
    }

    /* No Data Message */
    p {
        color: #555;
        font-style: italic;
    }

    /* Feedback List Section */
    .feedback-section {
        margin-top: 30px;
    }

    .feedback-section h3 {
        margin-bottom: 15px;
    }
</style>

<div class="container">
    <h2>Manage Feedback</h2>

    <!-- Bookings Table -->
    <h3>Bookings List</h3>
    @if (Model.Bookings.Any())
    {
        <table>
            <thead>
                <tr>
                    <th>Booking ID</th>
                    <th>Created At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var booking in Model.Bookings)
                {
                    <tr>
                        <td>@booking.BookingID</td>
                        <td>@booking.createdAt</td>
                        <td>
                            <a asp-page="./ManageFeedbackManager" asp-route-BookingId="@booking.BookingID">View</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No bookings found.</p>
    }

    <!-- Feedback List for Selected Booking -->
    @if (Model.BookingId.HasValue && Model.Feedbacks.Any())
    {
        <div class="feedback-section">
            <h3>Feedback List for Selected Booking</h3>
            <table>
                <thead>
                    <tr>
                        <th>Feedback ID</th>
                        <th>Content</th>
                        <th>Service Name</th>
                        <th>Customer Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var feedback in Model.Feedbacks)
                    {
                        <tr>
                            <td>@feedback.FeedbackID</td>
                            <td>@feedback.Content</td>
                            <td>@feedback.ServiceName</td>
                            <td>@feedback.CustomerName</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else if (Model.BookingId.HasValue)
    {
        <p>No feedback found for this booking.</p>
    }
</div>